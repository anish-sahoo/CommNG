# Production Environment Configuration
# Copy this file to terraform.tfvars when deploying to production

environment = "prod"

# Production features
enable_infrastructure_scheduler = false  # Keep prod running 24/7

# Production database config
db_instance_class = "db.t4g.small"  # or larger
db_allocated_storage = 50
db_backup_retention_period = 7
db_multi_az = true
db_deletion_protection = true
db_publicly_accessible = false

# Production cache limits
cache_max_storage_gb = 5
cache_max_ecpu = 5000

# Production ECS resources
ecs_cpu = 512
ecs_memory = 1024
ecs_desired_count = 2
ecs_max_capacity = 10

# Enable monitoring in production
enable_container_insights = true

# Longer log retention for production
log_retention_days = 30
